{
  "name": "ones-helper",
  "displayName": "ONES Helper",
  "version": "2.0.1",
  "description": "ONES 内部效率插件",
  "private": true,
  "author": "ONES",
  "scripts": {
    "prod": "npm run build && npm run pack:zip && open .",
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "dev:bg": "npm run build:bg -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js build:bg",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "build:bg": "vite build --config vite.config.bg.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add ONESHelper -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf ONESHelper/dist ONESHelper/manifest.json ONESHelper.*",
    "lint": "eslint 'src/**/*.{json,ts,js,vue}'",
    "publish:patch": "npm version patch && git push origin main --tags",
    "prepare": "husky install",
    "watch:bg": "nodemon --ignore \"*.d.ts\" --watch \"src/background\" -e ts,js,mjs,json,vue --exec \"pnpm dev:bg\"",
    "watch:web": "nodemon --ignore \"*.d.ts\" --watch \"src/popup\" -e ts,js,mjs,json,vue --exec \"pnpm build:web\"",
    "watch:devtools": "nodemon --ignore \"*.d.ts\" --watch \"src/devtools\" -e ts,js,mjs,json,vue --exec \"pnpm build:web\""
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.9.0",
    "@ffflorian/jszip-cli": "^3.1.5",
    "@iconify-json/icon-park-outline": "^1.0.1",
    "@interactjs/types": "^1.10.11",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.7.13",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@vitejs/plugin-vue": "^2.0.0",
    "@vitejs/plugin-vue-jsx": "^1.2.0",
    "@vue/compiler-sfc": "^3.2.19",
    "@vueuse/core": "^6.5.3",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "esno": "^0.10.0",
    "fs-extra": "^10.0.0",
    "kolorist": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "typescript": "^4.4.3",
    "unplugin-auto-import": "^0.4.8",
    "unplugin-icons": "^0.12.23",
    "unplugin-vue-components": "^0.15.4",
    "vite": "^2.6.2",
    "vite-plugin-windicss": "^1.4.8",
    "vue": "^3.2.19",
    "vue-router": "^4.0.12",
    "vue-demi": "^0.11.4",
    "web-ext": "^6.4.0",
    "webext-bridge": "^5.0.0",
    "webextension-polyfill": "^0.8.0"
  },
  "dependencies": {
    "@types/chrome": "^0.0.190",
    "date-fns": "^2.27.0",
    "husky": "^7.0.4",
    "interactjs": "^1.2.0",
    "lint-staged": "^12.2.2",
    "lodash-es": "^4.17.21",
    "naive-ui": "^2.19.3",
    "nodemon": "^2.0.16",
    "vue-json-viewer": "3"
  }
}
